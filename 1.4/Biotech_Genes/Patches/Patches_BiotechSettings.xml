<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="WVC.PatchOperationOptional">
		<settingName>disableFurGraphic</settingName>
		<caseTrue Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/forcedHeadTypes</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/graphicData/fur</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/graphicData</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/modExtensions/li/furHidesBody</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/modExtensions/li/useSkinColorForFur</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/modExtensions/li/dontColourFur</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/modExtensions/li[@Class="WVC_XenotypesAndGenes.GeneExtension_General"]/eyesShouldBeInvisble</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/geneClass[contains(text(),'WVC.Gene_Faceless')]</xpath>
					<success>Always</success>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>/Defs/GeneDef[@WVC_Tag="MechaAndNodeSkins_EasyPatch"]/geneClass[contains(text(),'WVC_XenotypesAndGenes.Gene_Faceless')]</xpath>
					<success>Always</success>
				</li>

				<li Class="WVC.PatchOperationOptional">
					<settingName>disableAllGraphic</settingName>
					<caseTrue Class="PatchOperationSequence">
						<operations>
							<li Class="PatchOperationRemove">
								<xpath>/Defs/GeneDef[defName[contains(text(),'WVC_')]]/graphicData</xpath>
								<success>Always</success>
							</li>
						</operations>
					</caseTrue>
				</li>
			</operations>
		</caseTrue>
		<!-- <caseFalse Class="PatchOperationSequence"> -->
			<!-- <operations> -->
			<!-- </operations> -->
		<!-- </caseFalse> -->
	</Operation>


</Patch>