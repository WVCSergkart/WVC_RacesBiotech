<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Wings_FeatheredWings</defName>
	<label>flying</label>
	<!-- <label>feathered wings</label> -->
	<description>The pawn uses wings for ease of movement.</description>
	<stages>
	  <li>
		<!-- <becomeVisible>false</becomeVisible> -->
		<minSeverity>0.0</minSeverity>
	  </li>
	</stages>
	<comps>
	  <li Class="AnimalBehaviours.HediffCompProperties_Floating">
		<checkingInterval>1500</checkingInterval>
	  </li>
	  <li Class="WVC_XenotypesAndGenes.HediffCompProperties_PawnHaveWings"/>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
  </HediffDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Dustogenic_KillAfterTime</defName>
	<label>genetic collapse</label>
	<description>Remains of dust in the blood cause genetic collapse, this process is not reversible and will definitely lead to imminent death.</description>
	<stages>
	  <li>
		<!-- <becomeVisible>false</becomeVisible> -->
		<lifeThreatening>true</lifeThreatening>
		<vomitMtbDays>0.1</vomitMtbDays>
		<deathMtbDays>0.7</deathMtbDays>
		<minSeverity>0.0</minSeverity>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.2</setMax>
		  </li>
		</capMods>
	  </li>
	</stages>
	<comps>
	  <li Class="HediffCompProperties_KillAfterDays">
		<days>1</days>
	  </li>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	  <!-- Anti-bug wall -->
	  <!-- Removes the hediff if it was not applied by mod reimplanters. -->
	  <!-- For example, the vanilla reimplanter first applies genes, then removes them, and then adds them again. -->
	  <!-- <li Class="WVC_XenotypesAndGenes.HediffCompProperties_RemoveIfPawnHasAngelicStabilityGene"/> -->
	  <li Class="WVC_XenotypesAndGenes.HediffCompProperties_RemoveIf">
		<anyOf_GeneDef>
		  <li>WVC_Dustogenic_GeneticStability</li>
		  <li>WVC_Shapeshifter</li>
		  <li>WVC_Shapeshifter_Rand</li>
		</anyOf_GeneDef>
	  </li>
	</comps>
  </HediffDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Dustogenic_HediffImmaculateConception</defName>
	<label>pregnant</label>
	<labelNoun>pregnancy</labelNoun>
	<description>An artificially launched process using dust. Unlike a standard pregnancy, the result will be 100% successful regardless of external factors.</description>
	<defaultLabelColor>(255, 248, 133)</defaultLabelColor>
	<initialSeverity>0.01</initialSeverity>
	<minSeverity>0.01</minSeverity>
	<maxSeverity>1.0</maxSeverity>
	<preventsPregnancy>true</preventsPregnancy>
	<stages>
	  <li>
		<label>first trimester</label>
		<statFactors>
		  <RestFallRateFactor>1.2</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>1.0</setMax>
		  </li>
		</capMods>
	  </li>
	  <li>
		<label>second trimester</label>
		<minSeverity>0.333</minSeverity>
		<statFactors>
		  <RestFallRateFactor>1.6</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.80</setMax>
		  </li>
		</capMods>
	  </li>
	  <li>
		<label>third trimester</label>
		<minSeverity>0.666</minSeverity>
		<statFactors>
		  <RestFallRateFactor>2.0</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.20</setMax>
		  </li>
		</capMods>
	  </li>
	  <li>
		<label>recovery</label>
		<minSeverity>0.90</minSeverity>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.20</setMax>
		  </li>
		</capMods>
	  </li>
	</stages>
	<comps>
	  <li Class="WVC_XenotypesAndGenes.HediffCompProperties_ImmaculateConception">
		<requiredSeverity>1.0</requiredSeverity>
		<hediffDef>WVC_XenotypesAndGenes_PostGestationRecovery</hediffDef>
		<completeMessage>WVC_XaG_Gene_ImmaculateConception</completeMessage>
	  </li>
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>0.17</severityPerDay>
	  </li>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
  </HediffDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_DustMechanoid_OnlyOneOverseer</defName>
	<label>bonded</label>
	<description>This mechanoid was incorrectly and rudely connected to the mechanitor's network, it does not require bandwidth, but changing the network can cause critical errors.

&lt;color=#f5ffa2&gt;Gameplay effect:&lt;/color&gt; Mechanoid does not require bandwidth, but if you change the overseer, then after a while mechanoid will die.</description>
	<defaultLabelColor>(255, 248, 133)</defaultLabelColor>
	<hediffClass>HediffWithComps</hediffClass>
	<priceImpact>true</priceImpact>
	<priceOffset>-350</priceOffset>
	<stages>
	  <li>
		<statFactors>
		  <BandwidthCost>0</BandwidthCost>
		  <ArmorRating_Blunt>0.75</ArmorRating_Blunt>
		  <ArmorRating_Sharp>0.75</ArmorRating_Sharp>
		  <!-- <ArmorRating_Heat>0.8</ArmorRating_Heat> -->
		</statFactors>
		<statOffsets>
		  <BandwidthCost>-999</BandwidthCost>
		  <MechEnergyUsageFactor>0.50</MechEnergyUsageFactor>
		  <MechEnergyLossPerHP>0.44</MechEnergyLossPerHP>
		  <WorkSpeedGlobal>0.20</WorkSpeedGlobal>
		  <ControlTakingTime>108</ControlTakingTime>
		</statOffsets>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.90</setMax>
		  </li>
		</capMods>
	  </li>
	</stages>
	<comps>
		<li Class="WVC_XenotypesAndGenes.HediffCompProperties_OnlyOneOverseer"/>
		<li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
  </HediffDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Dustogenic_DelayedReimplanter</defName>
	<label>genetic storm</label>
	<description>Delayed reimplantation of genes causes fatigue and hunger.</description>
	<defaultLabelColor>(255, 248, 133)</defaultLabelColor>
	<initialSeverity>0.01</initialSeverity>
	<minSeverity>0.01</minSeverity>
	<maxSeverity>1.0</maxSeverity>
	<stages>
	  <li>
		<label>minor</label>
		<hungerRateFactor>1.2</hungerRateFactor>
		<statFactors>
		  <RestFallRateFactor>1.2</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>1.0</setMax>
		  </li>
		</capMods>
	  </li>
	  <li>
		<label>severe</label>
		<minSeverity>0.333</minSeverity>
		<hungerRateFactor>1.6</hungerRateFactor>
		<statFactors>
		  <RestFallRateFactor>1.6</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.80</setMax>
		  </li>
		</capMods>
	  </li>
	  <li>
		<label>extreme</label>
		<minSeverity>0.666</minSeverity>
		<hungerRateFactor>2.0</hungerRateFactor>
		<statFactors>
		  <RestFallRateFactor>2.0</RestFallRateFactor>
		</statFactors>
		<capMods>
		  <li>
			<capacity>Consciousness</capacity>
			<setMax>0.20</setMax>
		  </li>
		</capMods>
	  </li>
	</stages>
	<comps>
	  <li Class="WVC_XenotypesAndGenes.HediffCompProperties_ChangeXenotype"/>
	  <!-- <li Class="HediffCompProperties_SeverityPerDay"> -->
		<!-- <severityPerDay>0.17</severityPerDay> -->
	  <!-- </li> -->
	  <li Class="HediffCompProperties_SeverityPerDay">
		<severityPerDay>1.0</severityPerDay>
	  </li>
	  <li Class="HediffCompProperties_DisappearsOnDeath"/>
	</comps>
  </HediffDef>

