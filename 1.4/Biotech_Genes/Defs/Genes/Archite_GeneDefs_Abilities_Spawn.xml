<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AbilityDef ParentName="AbilityTouchBase"  Name="WVC_XenotypesAndGenes_AbilityTouchSpawn_ResurgentTree" Abstract="True">
	<iconPath>WVC/UI/Genes/Reimplanter</iconPath>
	<warmupStartSound>ReimplantXenogerm_Cast</warmupStartSound>
	<warmupEffecter>Implant_Xenogerm</warmupEffecter>
	<displayOrder>500</displayOrder>
	<hostile>false</hostile>
	<displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
	<disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
	<showWhenDrafted>false</showWhenDrafted>
	<verbProperties>
	  <verbClass>Verb_CastAbilityTouch</verbClass>
	  <drawAimPie>false</drawAimPie>
	  <range>-1</range>
	  <warmupTime>4</warmupTime>
	  <targetParams>
		<canTargetAnimals>false</canTargetAnimals>
		<canTargetSelf>false</canTargetSelf>
		<canTargetBuildings>false</canTargetBuildings>
		<canTargetMechs>false</canTargetMechs>
		<canTargetPawns>false</canTargetPawns>
		<canTargetLocations>true</canTargetLocations>
	  </targetParams>
	</verbProperties>
  </AbilityDef>

  <AbilityDef ParentName="WVC_XenotypesAndGenes_AbilityTouchSpawn_ResurgentTree">
	<defName>WVC_AbilitySpawn_ResurgentTree</defName>
	<label>plant resurgent tree</label>
	<description>Plant a resurgent tree.

The resurgent tree slowly pollutes the soil around it and raises walking corpses.
Also, the tree once a year will spawn babies that inherit the genes of one of the owners of "Resurgent spores" gene in the settlement.
If all the owners of this gene are dead or absent in the settlement, then the tree will stop spawning babies.</description>
	<iconPath>WVC/UI/Genes/Gene_ResurgentTree_v0</iconPath>
	<comps>
	  <li Class="WVC_XenotypesAndGenes.CompProperties_AbilitySpawn">
		<!-- Test thing WVC_XenotypesAndGenes_WalkingCorpseTotem -->
		<thingDef>WVC_Plant_TreeResurgent</thingDef>
		<allowOnNonSoil>false</allowOnNonSoil>
	  </li>
	  <li Class="WVC_XenotypesAndGenes.CompProperties_AbilityResurgentCost">
		<resurgentCost>0.66</resurgentCost>
	  </li>
	  <li Class="WVC_XenotypesAndGenes.CompProperties_AbilityGeneIsActive">
		<eachOfGenes>
		  <li>WVC_ResurgentCells</li>
		  <li>WVC_ResurgentCellsGain</li>
		  <li>WVC_ResurgentCells_AbilitySpawn_ResurgentTree</li>
		</eachOfGenes>
	  </li>
	</comps>
  </AbilityDef>

</Defs>