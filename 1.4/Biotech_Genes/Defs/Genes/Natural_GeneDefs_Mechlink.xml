	  <!-- <li Class="WVC_XenotypesAndGenes.ConditionalStatAffecter_Genes"> -->
		<!-- <geneDef>WVC_MechaAI_Base</geneDef> -->
		<!-- <invert>true</invert> -->
		<!-- <statOffsets> -->
		<!-- </statOffsets> -->
	  <!-- </li> -->
	<!-- </conditionalStatAffecters> -->
	<biostatCpx>2</biostatCpx>
	<biostatMet>-3</biostatMet>
  </GeneDef>

</Defs>