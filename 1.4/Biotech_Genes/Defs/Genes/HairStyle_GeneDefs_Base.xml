<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Punk -->

  <GeneDef ParentName="GeneHairStyleBase" Name="WVC_XenotypesAndGenes_GeneHairStyle_Base" Abstract="True">
	<description>Carriers of this gene grow hair on the head is a bit weird.</description>
	<iconPath>WVC/UI/Genes/PunkHaired</iconPath>
	<displayOrderInCategory>57</displayOrderInCategory>
	<displayCategory>WVC_Cosmetic</displayCategory>
	<selectionWeight>0.0022</selectionWeight>
  </GeneDef>

  <!-- Punk -->

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneHairStyle_Base">
	<defName>WVC_Hair_PunkOnly</defName>
	<label>punk-haired</label>
	<iconPath>WVC/UI/Genes/Gene_HairPunk</iconPath>
	<hairTagFilter>
	  <whitelist>true</whitelist>
	  <tags>
		<li>Punk</li>
	  </tags>
	</hairTagFilter>
	<symbolPack>
	  <wholeNameSymbols>
		<li><symbol>punkind</symbol></li>
		<li><symbol>punkkind</symbol></li>
	  </wholeNameSymbols>
	  <prefixSymbols>
		<li><symbol>punk</symbol></li>
		<li><symbol>rock</symbol></li>
		<li><symbol>roc</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>punk</symbol></li>
		<li><symbol>rocker</symbol></li>
		<li><symbol>ker</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <!-- Tribal -->

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneHairStyle_Base">
	<defName>WVC_Hair_TribalOnly</defName>
	<label>tribal-haired</label>
	<iconPath>WVC/UI/Genes/Gene_HairTrible</iconPath>
	<hairTagFilter>
	  <whitelist>true</whitelist>
	  <tags>
		<li>Tribal</li>
	  </tags>
	</hairTagFilter>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>tribal</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>

  <!-- NonBald -->

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneHairStyle_Base">
	<defName>WVC_Hair_NonBald</defName>
	<label>never bald</label>
	<description>Carriers of this gene never go bald.</description>
	<iconPath>WVC/UI/Genes/Gene_HairNonBald_v0</iconPath>
	<hairTagFilter>
	  <whitelist>false</whitelist>
	  <tags>
		<li>Bald</li>
		<li>Shaved</li>
		<li>Balding</li>
	  </tags>
	</hairTagFilter>
  </GeneDef>
  
</Defs>