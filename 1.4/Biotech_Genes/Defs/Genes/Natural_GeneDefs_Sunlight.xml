  <GeneDef ParentName="GeneBeautyBase">
	<defName>WVC_SunlightBeauty_Sun</defName>
	<label>sunlight beauty</label>
	<description>Due to exposure to sunlight, the skin of carriers of this gene becomes very attractive, but it is so only in the sun.</description>
	<iconPath>WVC/UI/Genes/SunlightBeautyA</iconPath>
	<displayOrderInCategory>70</displayOrderInCategory>
	<!-- <biostatCpx>1</biostatCpx> -->
	<biostatMet>-1</biostatMet>
	<selectionWeight>0.03</selectionWeight>
	<conditionalStatAffecters>
	  <li Class="ConditionalStatAffecter_InSunlight">
		<statOffsets>
			<PawnBeauty>2</PawnBeauty>
		</statOffsets>
	  </li>
	  <li Class="VanillaGenesExpanded.ConditionalStatAffecter_NoSunlight">
		<statOffsets>
			<PawnBeauty>-2</PawnBeauty>
		</statOffsets>
	  </li>
	</conditionalStatAffecters>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>sun</symbol></li>
		<li><symbol>light</symbol></li>
		<li><symbol>sunlight-</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>

