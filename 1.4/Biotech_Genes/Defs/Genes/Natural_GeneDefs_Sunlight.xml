  <GeneDef ParentName="WVC_SunPhobiaSensitivity_Base">
	<defName>WVC_DebuffUV_StrongInjuryHealing</defName>
	<label>strong sunphobia</label>
	<description>Carriers of this gene partially stop regeneration when they are in sunlight.</description>
	<iconPath>WVC/UI/Genes/SunDebuff_Heal1</iconPath>
	<displayCategory>Healing</displayCategory>
	<dislikesSunlight>true</dislikesSunlight>
	<biostatCpx>2</biostatCpx>
	<biostatMet>3</biostatMet>
	<exclusionTags>
	  <li>WVC_DebuffUV_InjuryHealing</li>
	</exclusionTags>
	<conditionalStatAffecters>
	  <li Class="ConditionalStatAffecter_InSunlight">
		<statFactors>
		  <InjuryHealingFactor>0.5</InjuryHealingFactor>
		</statFactors>
	  </li>
	</conditionalStatAffecters>
  </GeneDef>
  <GeneDef ParentName="WVC_SunPhobiaSensitivity_Base">
	<defName>WVC_DebuffUV_ExtremeInjuryHealing</defName>
	<label>extreme sunphobia</label>
	<description>Carriers of this gene completely stop regeneration when they are in sunlight.</description>
	<iconPath>WVC/UI/Genes/SunDebuff_Heal2</iconPath>
	<displayCategory>Healing</displayCategory>
	<dislikesSunlight>true</dislikesSunlight>
	<biostatCpx>3</biostatCpx>
	<biostatMet>4</biostatMet>
	<exclusionTags>
	  <li>WVC_DebuffUV_InjuryHealing</li>
	</exclusionTags>
	<conditionalStatAffecters>
	  <li Class="ConditionalStatAffecter_InSunlight">
		<statFactors>
		  <InjuryHealingFactor>0.0</InjuryHealingFactor>
