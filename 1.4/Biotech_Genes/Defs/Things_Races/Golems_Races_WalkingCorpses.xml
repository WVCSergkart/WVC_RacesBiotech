	<ThingDef ParentName="LightMechanoid" Name="WVC_XenotypesAndGenes_ResurgentSpores_Base" Abstract="True">
		<description>A pile of bones animated by archotech-created archites in a toxic fungus. This “mechanoid” requires very little energy and bandwidth, but for full control it requires resurgent spores.</description>
		<soundImpactDefault>BulletImpact_Flesh</soundImpactDefault>
		<descriptionHyperlinks>
		  <ThingDef>WVC_Plant_TreeResurgent</ThingDef>
		  <ThingDef>WVC_XenotypesAndGenes_WalkingCorpseTotem</ThingDef>
		</descriptionHyperlinks>
		<statBases>
			<!-- <ToxicResistance>1</ToxicResistance> -->
			<!-- <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance> -->
			<!-- <PsychicSensitivity>1.5</PsychicSensitivity> -->
			<Flammability>0.2</Flammability>
			<!-- <MeatAmount>5</MeatAmount> -->
			<!-- <LeatherAmount>3</LeatherAmount> -->
			<ArmorRating_Sharp>0.3</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.2</ArmorRating_Blunt>
			<ArmorRating_Heat>0.4</ArmorRating_Heat>
			<!-- <ComfyTemperatureMin>-100</ComfyTemperatureMin> -->
			<!-- <ComfyTemperatureMax>250</ComfyTemperatureMax> -->
			<MarketValue>120</MarketValue>
			<MoveSpeed>3.6</MoveSpeed>
			<Mass>43</Mass>
			<!-- Mech -->
			<!-- <BandwidthCost>-999</BandwidthCost> -->
			<BandwidthCost>0.2</BandwidthCost>
			<WVC_SporesBandwidthCost>1</WVC_SporesBandwidthCost>
			<MechEnergyUsageFactor>0.05</MechEnergyUsageFactor>
			<MechEnergyLossPerHP>0.05</MechEnergyLossPerHP>
			<WastepacksPerRecharge>0</WastepacksPerRecharge>
			<!-- Work -->
			<FoodPoisonChance>0</FoodPoisonChance>
			<MiningSpeed>0.25</MiningSpeed>
			<PlantWorkSpeed>0.25</PlantWorkSpeed>
			<ConstructionSpeed>0.25</ConstructionSpeed>
			<SmoothingSpeed>0.25</SmoothingSpeed>
			<GeneralLaborSpeed>0.25</GeneralLaborSpeed>
			<MedicalTendSpeed>0.25</MedicalTendSpeed>
			<MedicalOperationSpeed>0.25</MedicalOperationSpeed>
			<CookSpeed>0.25</CookSpeed>
			<SmeltingSpeed>0.25</SmeltingSpeed>
			<DrugSynthesisSpeed>0.25</DrugSynthesisSpeed>
			<ButcheryFleshSpeed>0.25</ButcheryFleshSpeed>
			<ButcheryMechanoidSpeed>0.25</ButcheryMechanoidSpeed>
			<!-- Other -->
			<MedicalSurgerySuccessChance>2.0</MedicalSurgerySuccessChance>
			<ConstructSuccessChance>2.0</ConstructSuccessChance>
			<FixBrokenDownBuildingSuccessChance>2.0</FixBrokenDownBuildingSuccessChance>
		</statBases>
		<!-- <tradeability>None</tradeability> -->
		<uiIconScale>1.4</uiIconScale>
		<tools Inherit="False">
			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>16</power>
				<cooldownTime>1.8</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
			</li>
		</tools>
		<race>
			<deathActionWorkerClass>WVC_XenotypesAndGenes.DeathActionWorker_SpawnThing</deathActionWorkerClass>
			<body>WVC_XenotypesAndGenes_WalkingCorpse</body>
