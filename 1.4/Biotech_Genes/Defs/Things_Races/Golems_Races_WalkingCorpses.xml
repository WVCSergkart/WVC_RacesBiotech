			<li Class="WVC_XenotypesAndGenes.CompProperties_Regeneration">
				<refreshTicks>3000</refreshTicks>
				<regenAmount>2</regenAmount>
				<shouldSendNotification>false</shouldSendNotification>
			</li>
			<!-- <li MayRequire="Ludeon.Rimworld.Biotech" Class="CompProperties_OverseerSubject"> -->
				<!-- <needsOverseerEffect>MechUncontrolled</needsOverseerEffect> -->
				<!-- <delayUntilFeralCheck>120000</delayUntilFeralCheck> -->
				<!-- <feralMtbDays>10</feralMtbDays> -->
				<!-- <feralCascadeRadialDistance>25</feralCascadeRadialDistance> -->
			<!-- </li> -->
			<!-- Runs on spawn and save load. Checks if there are needed hediffs and adds missing ones. -->
			<li Class="WVC_XenotypesAndGenes.CompProperties_InitialHediff">
				<hediffDefs>
				  <li>WVC_SelfPopulationRegulation_BoneGolems</li>
				</hediffDefs>
			</li>
			<li Class="WVC_XenotypesAndGenes.CompProperties_InitialEnergyNeed"/>
		</comps>
		<modExtensions>
			<li Class="WVC_XenotypesAndGenes.GeneExtension_Spawner">
				<thingDefToSpawn>WVC_XenotypesAndGenes_WalkingCorpseTotem</thingDefToSpawn>
				<!-- <stackCount>1</stackCount> -->
			</li>
			<li Class="WVC_XenotypesAndGenes.ThingExtension_Golems">
				<removeDormantComp>true</removeDormantComp>
				<removeRepairComp>true</removeRepairComp>
				<removeButcherRecipes>true</removeButcherRecipes>
			</li>
		</modExtensions>
	</ThingDef>

