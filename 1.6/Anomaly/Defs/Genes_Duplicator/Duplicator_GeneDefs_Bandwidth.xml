<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneDuplicator_MeSource">
	<defName>WVC_Duplicator_Bandwidth</defName>
	<label>duplicator bandwidth</label>
	<description>Carriers of this gene can absorb the bandwidth of their duplicates.</description>
	<geneClass>WVC_XenotypesAndGenes.Gene_Duplicator_Bandwidth</geneClass>
	<iconPath>WVC/UI/Genes3/Gene_Duplicator_Bandwidth</iconPath>
	<displayOrderInCategory>60</displayOrderInCategory>
	<biostatCpx>2</biostatCpx>
	<biostatArc>1</biostatArc>
	<customEffectDescriptions>
		<!-- <li>&lt;color=#8a8ae6&gt;Increases bandwidth&lt;/color&gt; depending on the bandwidth of &lt;color=#8a8ae6&gt;duplicates&lt;/color&gt;.</li> -->
		<li>Gradually absorbs the &lt;color=#8a8ae6&gt;bandwidth&lt;/color&gt; of duplicates, increasing the &lt;color=#8a8ae6&gt;bandwidth&lt;/color&gt; of the carrier.</li>
		<!-- <li>Carrier &lt;color=#8a8ae6&gt;bandwidth&lt;/color&gt;: duplicate bandwidth</li> -->
		<li>Duplicates &lt;color=#8a8ae6&gt;bandwidth&lt;/color&gt;: x0</li>
	</customEffectDescriptions>
	<modExtensions>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Giver">
			<hediffDef>WVC_Duplicator_Bandwidth</hediffDef>
			<dupeHediffDef>WVC_Duplicatee_Bandwidth</dupeHediffDef>
		</li>
	</modExtensions>
  </GeneDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Duplicator_Bandwidth</defName>
	<label>from duplicates</label>
	<description>Bandwidth received from duplicates.</description>
	<hediffClass>WVC_XenotypesAndGenes.Hediff_DuplicatorBandwidth</hediffClass>
  </HediffDef>

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_Duplicatee_Bandwidth</defName>
	<label>from source</label>
	<hediffClass>WVC_XenotypesAndGenes.Hediff_DuplicateBandwidth</hediffClass>
  </HediffDef>

</Defs>