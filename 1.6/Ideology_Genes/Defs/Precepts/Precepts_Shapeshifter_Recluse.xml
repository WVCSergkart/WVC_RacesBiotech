  <!-- Duplicates -->

  <PreceptDef MayRequire="ludeon.rimworld.anomaly">
	<defName>WVC_Shapeshifters_Duplicates</defName>
	<issue>WVC_Shapeshifters</issue>
	<label>duplicates</label>
	<description>In these difficult times, we can only trust ourselves. The rest will only be a burden.\n\n&lt;color=#f5ffa2&gt;Gameplay Effects:&lt;/color&gt; Only duplicates and non-sentient pawns are allowed, all others are subject to a penalty.</description>
	<impact>High</impact>
	<requiredMemes>
	  <li>WVC_Shapeshifterist</li>
	</requiredMemes>
	<enabledForNPCFactions>false</enabledForNPCFactions>
	<displayOrderInIssue>30</displayOrderInIssue>
	<statOffsets>
	  <MentalBreakThreshold>-0.04</MentalBreakThreshold>
	  <WorkSpeedGlobal>0.2</WorkSpeedGlobal>
	</statOffsets>
	<comps>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_Shapeshifters_OneManArmy_Duplicates</thought>
		<description>For each colonist (non-quest, non-duplicate) above 1</description>
	  </li>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_OneManArmy_MyDuplicateSocial</thought>
		<description>My duplicate</description>
	  </li>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_OneManArmy_MySourceSocial</thought>
		<description>My source</description>
	  </li>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_OneManArmy_SameSourceSocial</thought>
		<description>Same source</description>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_Shapeshift</eventDef>
		<eventLabel>shapeshift</eventLabel>
		<points>5</points>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_Morph</eventDef>
		<eventLabel>morph</eventLabel>
		<points>3</points>
	  </li>
	</comps>
  </PreceptDef>

  <ThoughtDef MayRequire="ludeon.rimworld.anomaly">
	<defName>WVC_Shapeshifters_OneManArmy_Duplicates</defName>
	<thoughtClass>Thought_Situational</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_Duplicates</workerClass>
	<stages>
	  <li>
		<label>non-duplicates</label>
		<description>Our unity is broken by the presence of an extra "Source". There should not be more than one Source.</description>
		<baseMoodEffect>-10</baseMoodEffect>
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef MayRequire="ludeon.rimworld.anomaly">
	<defName>WVC_OneManArmy_SameSourceSocial</defName>
	<thoughtClass>Thought_SituationalSocial</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_Social_SameSource</workerClass>
	<stages>
	  <li>
		<label>Same source</label>
		<baseOpinionOffset>10</baseOpinionOffset>
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef MayRequire="ludeon.rimworld.anomaly">
	<defName>WVC_OneManArmy_MyDuplicateSocial</defName>
	<thoughtClass>Thought_SituationalSocial</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_Social_MyDuplicate</workerClass>
	<stages>
	  <li>
		<label>My duplicate</label>
		<baseOpinionOffset>20</baseOpinionOffset>
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef MayRequire="ludeon.rimworld.anomaly">
	<defName>WVC_OneManArmy_MySourceSocial</defName>
	<thoughtClass>Thought_SituationalSocial</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_Social_MySource</workerClass>
	<stages>
	  <li>
		<label>My source</label>
		<baseOpinionOffset>25</baseOpinionOffset>
	  </li>
	</stages>
  </ThoughtDef>

  <!-- Deathwatch -->

  <PreceptDef>
	<defName>WVC_Shapeshifters_Deathwatch</defName>
	<issue>WVC_Shapeshifters</issue>
	<label>deathwatch</label>
	<description>We must stay awake in shifts, while one guards the peace of others, the resting ones gain strength.\n\n&lt;color=#f5ffa2&gt;Gameplay Effects:&lt;/color&gt; Any number of pawns in deathrest state are allowed, and only one is awake. Also, non-sentient ones are allowed.</description>
	<impact>High</impact>
	<requiredMemes>
	  <li>WVC_Shapeshifterist</li>
	</requiredMemes>
	<enabledForNPCFactions>false</enabledForNPCFactions>
	<displayOrderInIssue>40</displayOrderInIssue>
	<statOffsets>
	  <MentalBreakThreshold>-0.16</MentalBreakThreshold>
	  <WorkSpeedGlobal>0.1</WorkSpeedGlobal>
	  <!-- <GlobalLearningFactor>0.5</GlobalLearningFactor> -->
	  <HemogenGainFactor>0.2</HemogenGainFactor>
	</statOffsets>
	<comps>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_Shapeshifters_OneManArmy_Deathwatch</thought>
		<description>For each colonist (non-quest, non-deathresting) above 1</description>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_OneManArmy</eventDef>
		<eventLabel>for every day alone</eventLabel>
		<points>1</points>
	  </li>
	</comps>
  </PreceptDef>

  <ThoughtDef>
	<defName>WVC_Shapeshifters_OneManArmy_Deathwatch</defName>
	<thoughtClass>Thought_Situational</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_Deathwatch</workerClass>
	<stages>
	  <li>
		<label>deathwatch</label>
		<description>Someone has to deathrest, we can't carry watch as a group, it's dangerous.</description>
		<baseMoodEffect>-15</baseMoodEffect>
	  </li>
	</stages>
  </ThoughtDef>

</Defs>