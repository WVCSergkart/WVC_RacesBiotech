<Defs>

  <!-- Solo -->

  <PreceptDef>
	<defName>WVC_Shapeshifters_OneManArmy</defName>
	<issue>WVC_Shapeshifters</issue>
	<label>one man army</label>
	<description>We must stand alone. Together we are more vulnerable than apart.\n\n&lt;color=#f5ffa2&gt;Gameplay Effects:&lt;/color&gt; Penalty is applied for any pawns under direct control. Only prisoners are allowed. Non-sentient ones are excluded.</description>
	<impact>High</impact>
	<requiredMemes>
	  <li>WVC_Shapeshifterist</li>
	</requiredMemes>
	<enabledForNPCFactions>false</enabledForNPCFactions>
	<displayOrderInIssue>20</displayOrderInIssue>
	<!-- <conditionalStatAffecters> -->
	  <!-- <li Class="WVC_XenotypesAndGenes.ConditionalStatAffecter_Solo"> -->
		<!-- <statOffsets> -->
		  <!-- <MentalBreakThreshold>-0.16</MentalBreakThreshold> -->
		  <!-- <WorkSpeedGlobal>0.5</WorkSpeedGlobal> -->
		  <!-- <GlobalLearningFactor>0.5</GlobalLearningFactor> -->
		<!-- </statOffsets> -->
	  <!-- </li> -->
	<!-- </conditionalStatAffecters> -->
	<statOffsets>
	  <MentalBreakThreshold>-0.16</MentalBreakThreshold>
	  <WorkSpeedGlobal>0.5</WorkSpeedGlobal>
	  <GlobalLearningFactor>0.5</GlobalLearningFactor>
	</statOffsets>
	<comps>
	  <li Class="PreceptComp_SituationalThought">
		<thought>WVC_Shapeshifters_OneManArmy_Humanlikes</thought>
		<description>For each colonist (non-quest) above 1</description>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_OneManArmy</eventDef>
		<eventLabel>for every day alone</eventLabel>
		<points>1</points>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_Shapeshift</eventDef>
		<eventLabel>shapeshift</eventLabel>
		<points>10</points>
	  </li>
	  <li Class="PreceptComp_DevelopmentPoints">
		<eventDef>WVC_Morph</eventDef>
		<eventLabel>morph</eventLabel>
		<points>4</points>
	  </li>
	</comps>
  </PreceptDef>

  <ThoughtDef>
	<defName>WVC_Shapeshifters_OneManArmy_Humanlikes</defName>
	<thoughtClass>Thought_Situational</thoughtClass>
	<workerClass>WVC_XenotypesAndGenes.ThoughtWorker_Precept_OneManArmy</workerClass>
	<stages>
	  <li>
		<label>one man army</label>
		<description>We must stand alone. Together we are more vulnerable than apart.</description>
		<baseMoodEffect>-20</baseMoodEffect>
	  </li>
	</stages>
  </ThoughtDef>

