<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <IssueDef>
	<defName>WVC_Undeads</defName>
	<label>undeads</label>
	<iconPath>WVC/UI/Precepts/Precept_Undead</iconPath>
  </IssueDef>

  <!-- <HistoryEventDef> -->
