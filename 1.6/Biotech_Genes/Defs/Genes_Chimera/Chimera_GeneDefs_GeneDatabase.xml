<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneChimera_SubGenesRare" Name="WVC_XenotypesAndGenes_GeneChimera_SubGenesGeneline" Abstract="True">
	<description>Carriers of this gene have a rigid geneline that limits their chimera evolution.</description>
	<geneClass>WVC_XenotypesAndGenes.Gene_ChimeraGeneline</geneClass>
	<biostatCpx>-6</biostatCpx>
	<biostatArc>1</biostatArc>
	<biostatMet>4</biostatMet>
	<displayOrderInCategory>270</displayOrderInCategory>
	<customEffectDescriptions>
		<li>Only &lt;color=#8a8ae6&gt;geneline&lt;/color&gt; genes can be implanted.</li>
		<li>&lt;color=#8a8ae6&gt;Geneline&lt;/color&gt; genes are &lt;color=#8a8ae6&gt;always&lt;/color&gt; available.</li>
	</customEffectDescriptions>
  </GeneDef>

  <!-- ========================== -->

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneChimera_SubGenesRare">
	<defName>WVC_Chimera_GeneDatabase</defName>
	<label>genetic database</label>
	<description>Carriers of this gene can implant any genes they wish.</description>
	<geneClass>WVC_XenotypesAndGenes.Gene_Chimera_GeneDatabase</geneClass>
	<iconPath>WVC/UI/Genes3/Gene_Chimera_GeneDatabase</iconPath>
	<biostatCpx>6</biostatCpx>
	<biostatArc>7</biostatArc>
	<biostatMet>-5</biostatMet>
	<displayOrderInCategory>350</displayOrderInCategory>
	<customEffectDescriptions>
		<li>Unlocks all genes for the &lt;color=#8a8ae6&gt;chimera&lt;/color&gt;, without restrictions.</li>
	</customEffectDescriptions>
  </GeneDef>

  <!-- ========================== -->

  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneChimera_SubGenesGeneline">
	<defName>WVC_Chimera_GenelineHiveMind</defName>
	<label>hivemind geneline</label>
	<iconPath>WVC/UI/Genes3/Gene_Geneline_Hivemind</iconPath>
	<displayOrderInCategory>275</displayOrderInCategory>
	<biostatCpx>-6</biostatCpx>
	<biostatArc>2</biostatArc>
	<biostatMet>0</biostatMet>
	<modExtensions>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Giver">
			<geneCategoryDefs>
			  <li>WVC_HiveMind</li>
			</geneCategoryDefs>
			<excludedGeneDefs>
			  <li MayRequire="wvc.sergkart.test.tools">WVC_Hivemind_Metabolism</li>
			</excludedGeneDefs>
		</li>
	</modExtensions>
  </GeneDef>

</Defs>