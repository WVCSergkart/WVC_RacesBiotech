<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThoughtDef>
	<defName>WVC_PackMentality_Mood</defName>
	<thoughtClass>WVC_XenotypesAndGenes.Thought_PackMentality</thoughtClass>
	<durationDays>5</durationDays>
	<stackLimit>800</stackLimit>
	<stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
	<validWhileDespawned>true</validWhileDespawned>
	<stages>
	  <li>
		<label>pack mentality</label>
		<description>Our pack grows stronger. The bigger the pack, the more comfortable we will feel.</description>
		<baseMoodEffect>1</baseMoodEffect>
		<!-- <visible>false</visible> -->
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef ParentName="WVC_XenotypesAndGenes_Thought_MemorySocial_Base">
	<defName>WVC_PackMentality_Opinion</defName>
	<durationDays>5</durationDays>
	<stackLimit>800</stackLimit>
	<stackLimitForSameOtherPawn>1</stackLimitForSameOtherPawn>
	<validWhileDespawned>true</validWhileDespawned>
	<stages>
	  <li>
		<label>pack member</label>
		<baseOpinionOffset>50</baseOpinionOffset>
		<!-- <visible>false</visible> -->
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef ParentName="DeathMemoryFamily">
	<defName>WVC_PackMentality_DiedMember</defName>
	<nullifyingTraits>
		<li>Psychopath</li>
	</nullifyingTraits>
	<stages>
		<li>
			<label>pack member {0} died</label>
			<description>We lost a valuable pack member. Can they survive without their?</description>
			<baseMoodEffect>-5</baseMoodEffect>
		</li>
	</stages>
  </ThoughtDef>

</Defs>
