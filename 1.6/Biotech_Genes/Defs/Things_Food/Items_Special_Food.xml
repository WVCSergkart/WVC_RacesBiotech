		<count>2.00</count>
	  </li>
	  <li>
		<filter>
		  <customSummary>psychoid leaves</customSummary>
		  <thingDefs>
			<li>PsychoidLeaves</li>
		  </thingDefs>
		</filter>
		<count>0.40</count>
	  </li>
	</ingredients>
	<products>
	  <WVC_MealDustPack>4</WVC_MealDustPack>
	</products>
  </RecipeDef>

