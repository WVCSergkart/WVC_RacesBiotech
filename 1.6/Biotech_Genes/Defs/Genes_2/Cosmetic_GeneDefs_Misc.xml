  <GeneDef>
	<defName>WVC_Toughspike</defName>
	<label>toughspike</label>
	<description>Carriers of this gene grow two spiked limbs that help a little in combat.</description>
	<!-- <geneClass>WVC_XenotypesAndGenes.Gene_AddOrRemoveHediff</geneClass> -->
	<iconPath>WVC/UI/Genes/Gene_Toughspike_v0</iconPath>
