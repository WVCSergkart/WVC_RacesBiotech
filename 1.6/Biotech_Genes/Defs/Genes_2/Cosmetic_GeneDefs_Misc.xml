			<dataNorth>
			  <offset>(0.14, 0.4, 0.07)</offset>
			  <rotationOffset>-80</rotationOffset>
			  <flip>true</flip>
			</dataNorth>
			<dataSouth>
			  <offset>(-0.25, -0.4, 0.07)</offset>
			  <rotationOffset>50</rotationOffset>
			  <flip>true</flip>
			</dataSouth>
