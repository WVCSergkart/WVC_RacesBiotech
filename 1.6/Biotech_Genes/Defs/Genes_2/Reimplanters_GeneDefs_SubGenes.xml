<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
	<defName>WVC_PostImplanterBrainwash</defName>
	<label>post-recruit</label>
	<description>Carriers of this gene can instantly recruit pawns by implanter genes.</description>
	<iconPath>WVC/UI/Genes/Gene_PostImplanter_Recruit_v0</iconPath>
	<geneClass>WVC_XenotypesAndGenes.Gene_Implanter_Recruit</geneClass>
	<selectionWeight>0.0022</selectionWeight>
	<!-- <displayCategory>WVC_ResurgentCells</displayCategory> -->
	<displayCategory>WVC_Reimplanters</displayCategory>
	<displayOrderInCategory>120</displayOrderInCategory>
	<biostatCpx>2</biostatCpx>
	<biostatArc>0</biostatArc>
	<biostatMet>-1</biostatMet>
	<customEffectDescriptions>
		<li>Using a &lt;color=#8a8ae6&gt;post-implanter or implanter&lt;/color&gt; is guaranteed to recruit the target.</li>
	</customEffectDescriptions>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>recruit</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>

  <GeneDef MayRequire="ludeon.rimworld.ideology">
	<defName>WVC_PostImplanter_Convert</defName>
	<label>post-convert</label>
	<description>Carriers of this gene can instantly convert pawns by implanter genes.</description>
	<iconPath>WVC/UI/Genes/Gene_PostImplanter_Convert_v0</iconPath>
	<geneClass>WVC_XenotypesAndGenes.Gene_Implanter_Convert</geneClass>
	<selectionWeight>0.0022</selectionWeight>
	<!-- <displayCategory>WVC_ResurgentCells</displayCategory> -->
	<displayCategory>WVC_Reimplanters</displayCategory>
	<displayOrderInCategory>121</displayOrderInCategory>
	<biostatCpx>1</biostatCpx>
	<biostatArc>0</biostatArc>
	<biostatMet>-1</biostatMet>
	<customEffectDescriptions>
		<li>Using a &lt;color=#8a8ae6&gt;post-implanter or implanter&lt;/color&gt; is guaranteed to convert the target.</li>
	</customEffectDescriptions>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>convert</symbol></li>
	  </prefixSymbols>
	</symbolPack>
  </GeneDef>

</Defs>