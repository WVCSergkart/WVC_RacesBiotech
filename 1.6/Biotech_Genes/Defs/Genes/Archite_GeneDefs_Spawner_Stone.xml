<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Chunk spawner -->

  <!-- ParentName="WVC_XenotypesAndGenes_Archites" -->
  <GeneDef Name="WVC_Mechanoidization_StoneChunkSpawnerBase" Abstract="True">
	<labelShortAdj>stone molt</labelShortAdj>
	<description>Carriers of this gene have tough and rough skin, causing the carrier to shed in stone chunks.</description>
	<iconPath>Things/Item/Chunk/ChunkStone/RockLowC</iconPath>
	<iconColor>(255, 255, 255)</iconColor>
	<!-- <displayCategory>WVC_XenotypeSerumSpawners</displayCategory> -->
	<displayCategory>WVC_Miscellaneous</displayCategory>
	<displayOrderInCategory>950</displayOrderInCategory>
	<geneClass>WVC_XenotypesAndGenes.Gene_Spawner</geneClass>
	<!-- <biostatArc>1</biostatArc> -->
	<biostatCpx>2</biostatCpx>
	<marketValueFactor>0.8</marketValueFactor>
	<selectionWeight>0.0041</selectionWeight>
	<minAgeActive>3</minAgeActive>
	<customEffectDescriptions>
		<li>Spawns stonechunk every (*DateTime)10-15 days(/DateTime).</li>
	</customEffectDescriptions>
	<statOffsets>
	  <WVC_GolemBond>6</WVC_GolemBond>
	</statOffsets>
	<randomChosen>true</randomChosen>
	<exclusionTags>
	  <li>WVC_ChunkSpawner</li>
	</exclusionTags>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>chunk-</symbol></li>
		<li><symbol>chunk</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>chunk</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <!-- Vanilla -->
  <GeneDef ParentName="WVC_Mechanoidization_StoneChunkSpawnerBase">
	<defName>WVC_StoneChunkSpawner_Slate</defName>
	<label>slate molt</label>
	<iconColor>(70,70,70)</iconColor>
	<modExtensions>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Spawner">
			<thingDefToSpawn>ChunkSlate</thingDefToSpawn>
			<stackCount>1</stackCount>
			<spawnIntervalRange><min>600000</min><max>900000</max></spawnIntervalRange>
		</li>
	</modExtensions>
  </GeneDef>
