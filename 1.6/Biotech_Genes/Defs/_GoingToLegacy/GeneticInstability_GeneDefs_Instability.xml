	<statFactors>
	  <Fertility>0.05</Fertility>
	  <ImmunityGainSpeed>0.50</ImmunityGainSpeed>
	</statFactors>
	<modExtensions>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Giver">
			<jobDef>UseItem</jobDef>
