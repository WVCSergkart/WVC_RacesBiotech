<Defs>

  <GeneDef Name="WVC_XenotypesAndGenes_GeneHivemind_Base" Abstract="True">
	<geneClass>WVC_XenotypesAndGenes.Gene_Hivemind_Drone</geneClass>
	<iconColor>(255, 255, 255)</iconColor>
	<biostatCpx>8</biostatCpx>
	<biostatArc>4</biostatArc>
	<biostatMet>-4</biostatMet>
	<minAgeActive>0</minAgeActive>
	<selectionWeight>0</selectionWeight>
	<canGenerateInGeneSet>false</canGenerateInGeneSet>
	<displayCategory>WVC_HiveMind</displayCategory>
	<displayOrderInCategory>0</displayOrderInCategory>
	<marketValueFactor>3</marketValueFactor>
	<iconPath>WVC/UI/Genes3/Gene_HiveMind_Drone</iconPath>
