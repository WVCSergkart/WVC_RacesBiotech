<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef ParentName="WVC_Biotech_ForcedStat_Base">
	<defName>WVC_VoidMechsLimit</defName>
	<label>void mechs limit</label>
	<description>How many mechanoids can be skipped using voidlink without disturbing the nociosphere. Each mechanoid controlled above this limit adds 1% chance to skip the sphere.</description>
	<defaultBaseValue>0</defaultBaseValue>
	<hideAtValue>0</hideAtValue>
	<alwaysHide>false</alwaysHide>
	<category>Mechanitor</category>
	<displayPriorityInCategory>2010</displayPriorityInCategory>
	<toStringStyle>FloatOne</toStringStyle>
  </StatDef>

  <StatDef ParentName="WVC_Biotech_ForcedStat_Base">
	<defName>WVC_VoidDamageChance</defName>
	<label>void damage chance</label>
	<description>Chance that a mechanoid skipped using voidlink will receive damage.</description>
	<defaultBaseValue>0</defaultBaseValue>
	<maxValue>1</maxValue>
	<hideAtValue>0</hideAtValue>
	<alwaysHide>false</alwaysHide>
	<category>Mechanitor</category>
	<displayPriorityInCategory>2015</displayPriorityInCategory>
	<toStringStyle>PercentZero</toStringStyle>
  </StatDef>

  <!-- Used only for internal calculations. Should be invisible in the stats window. -->
  <StatDef ParentName="WVC_Biotech_ForcedStat_Base">
	<defName>WVC_MaxVoidEnergy</defName>
	<label>max voidlink resource</label>
	<!-- <description>The maximum amount of void energy that a voidlink can accumulate. This energy is used to summon mechanoids, each mechanoid has its own cost. Mechanoids that are more expensive than this value cannot be summoned.</description> -->
	<defaultBaseValue>1</defaultBaseValue>
	<hideAtValue>1</hideAtValue>
	<minValue>0.2</minValue>
	<alwaysHide>true</alwaysHide>
	<category>Mechanitor</category>
	<displayPriorityInCategory>2005</displayPriorityInCategory>
	<toStringStyle>FloatMaxTwo</toStringStyle>
  </StatDef>

</Defs>
