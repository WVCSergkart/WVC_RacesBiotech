  <AbilityDef>
	<defName>WVC_Dustogenic_FeatherBlades</defName>
	<label>hardened feathers</label>
	<description>Flap your wings and use the dastogenic chemical reactions to separate the hardened feathers at just the right moment to launch them at the target. Given the method of launch, it is surprisingly easy to aim.</description>
	<iconPath>WVC/UI/Genes/Gene_FeatherBlades_v0</iconPath>
	<cooldownTicksRange>60</cooldownTicksRange>
	<!-- <category>Sanguophage</category> -->
	<displayOrder>200</displayOrder>
	<aiCanUse>true</aiCanUse>
	<verbProperties>
	  <verbClass>Verb_CastAbility</verbClass>
	  <range>7.9</range>
	  <warmupTime>0.5</warmupTime>
	  <soundCast>PiercingSpine_Launch</soundCast>
	</verbProperties>
	<comps>
	  <li Class="WVC_XenotypesAndGenes.CompProperties_AbilityGeneIsActive">
		<eachOfGenes>
		  <li>WVC_Dustogenic_FeatherBlades</li>
		  <li>WVC_Dustogenic_GeneticStability</li>
		  <li>WVC_Dustogenic_FeatherBlades</li>
		  <li>WVC_Dustogenic</li>
		</eachOfGenes>
		<anyOfGenes>
		  <li>WVC_Wings_FeatheredWings</li>
		</anyOfGenes>
	  </li>
	  <li Class="WVC_XenotypesAndGenes.CompProperties_AbilityDustCost">
		<dustCost>0.1</dustCost>
	  </li>
	  <li Class="CompProperties_AbilityLaunchProjectile">
		<projectileDef>WVC_Dustogenic_HardenedFeathers</projectileDef>
	  </li>
	</comps>
  </AbilityDef>
  <ThingDef ParentName="BaseBullet">
	<defName>WVC_Dustogenic_HardenedFeathers</defName>
	<label>hardened feather</label>
	<graphicData>
	  <texPath>Things/Projectile/PiercingSpine</texPath>
	  <graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<projectile>
	  <damageDef>RangedStab</damageDef>
	  <damageAmountBase>30</damageAmountBase>
	  <armorPenetrationBase>1</armorPenetrationBase>
	  <stoppingPower>1</stoppingPower>
	  <speed>55</speed>
	</projectile>
  </ThingDef>

</Defs>