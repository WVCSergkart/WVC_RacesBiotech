<Defs>

  <GeneDef Name="WVC_XenotypesAndGenes_GeneBePredatorPrey_Base" Abstract="True">
	<iconColor>(255,255,255)</iconColor>
	<selectionWeight>0.0005</selectionWeight>
	<biostatCpx>1</biostatCpx>
	<symbolPack>
