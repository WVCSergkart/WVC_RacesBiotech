		</statFactors>
		<statOffsets>
		  <MoveSpeed>0.1</MoveSpeed>
		</statOffsets>
		<symbolPack>
		  <prefixSymbols>
			<li><symbol>chibi</symbol></li>
			<li><symbol>small</symbol></li>
