  <GeneDef ParentName="WVC_XenotypesAndGenes_GeneGeneHands_Base">
	<defName>WVC_Hands_Angel</defName>
	<label>angel hands</label>
	<description>Carriers of this gene have glands with mutagen poison on their hands.</description>
	<iconPath>WVC/UI/Genes/Gene_HandsAngels_v0</iconPath>
	<selectionWeight>0.008</selectionWeight>
    <iconColor>(0.75, 0.75, 0.75)</iconColor>
	<!-- <iconColor>(241, 175, 129)</iconColor> -->
	<biostatCpx>1</biostatCpx>
	<biostatMet>-2</biostatMet>
	<customEffectDescriptions>
		<li>Changes the target's genes to the caster's genes some time after the ability is used.</li>
		<li>To use the ability, genes are needed: Dustogenic, Dustogenic genetic.</li>
		<li>&lt;color=#ff8585&gt;Ignores genetic stability.&lt;/color&gt;</li>
		<!-- <li>&lt;color=#ff8585&gt;Can't be absorbed forcly.&lt;/color&gt;</li> -->
	</customEffectDescriptions>
	<abilities>
	  <li>WVC_Reimplanter_BlessedTouch</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>WVC_Reimplanter_BlessedTouch</AbilityDef>
	</descriptionHyperlinks>
	<!-- <exclusionTags> -->
		<!-- <li>WVC_Reimplanter</li> -->
	<!-- </exclusionTags> -->
  </GeneDef>

