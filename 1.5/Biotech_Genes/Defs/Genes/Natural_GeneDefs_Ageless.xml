		<li>(13, 4)</li>
		<li>(13.5, 1)</li>
		<!-- <li>(18.5, 0)</li> -->
	  </points>
	</biologicalAgeTickFactorFromAgeCurve>
	<statFactors>
		<LearningRateFactor>4.0</LearningRateFactor>
	</statFactors>
  </GeneDef>

