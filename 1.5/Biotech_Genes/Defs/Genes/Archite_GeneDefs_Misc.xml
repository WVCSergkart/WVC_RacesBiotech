  <GeneDef ParentName="WVC_XenotypesAndGenes_Archites">
	<defName>WVC_MechaHidden_ArchiteForge</defName>
	<label>total healing</label>
	<!-- <label>archite-forge</label> -->
	<description>Carriers of this gene have archites that regenerate lost limbs or heal scars.</description>
	<!-- <selectionWeight>0.001</selectionWeight> -->
	<geneClass>WVC_XenotypesAndGenes.Gene_RestoreMissingBodyParts</geneClass>
	<iconColor>(255, 255, 255)</iconColor>
	<marketValueFactor>3</marketValueFactor>
	<iconPath>WVC/UI/Genes/Gene_TotalHealing_v0</iconPath>
	<displayCategory>Archite</displayCategory>
	<displayOrderInCategory>0</displayOrderInCategory>
	<preventPermanentWounds>true</preventPermanentWounds>
	<!-- <prerequisite>WVC_MechaSkin</prerequisite> -->
	<biostatCpx>4</biostatCpx>
	<biostatArc>2</biostatArc>
	<biostatMet>0</biostatMet>
	<!-- <selectionWeight>0.00125</selectionWeight> -->
	<customEffectDescriptions>
		<li>Restores a lost limb or heals scars every (*DateTime)15-30 days(/DateTime).</li>
	</customEffectDescriptions>
  </GeneDef>

