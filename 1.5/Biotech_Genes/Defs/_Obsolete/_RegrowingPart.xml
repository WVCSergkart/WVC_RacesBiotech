<Defs>

  <!--=====================================================================-->

  <HediffDef ParentName="WVC_XenotypesAndGenes_Hediffs_Base">
	<defName>WVC_RegrowingPart</defName>
	<label>regrowing</label>
	<labelNoun>a regrowing</labelNoun>
	<!-- <description>The body part grows back. This is accompanied by a strong analgesic effect, which can be dangerous.</description> -->
	<description>A regrowing part.</description>
	<hediffClass>Hediff_Injury</hediffClass>
	<tendable>true</tendable>
	<displayWound>true</displayWound>
	<isBad>true</isBad>
	<!-- <preventsDeath>true</preventsDeath> -->
	<everCurableByItem>true</everCurableByItem>
	<keepOnBodyPartRestoration>false</keepOnBodyPartRestoration>
	<defaultLabelColor>(0.5, 0.5, 0.5)</defaultLabelColor>
	<chanceToCauseNoPain>0.2</chanceToCauseNoPain>
	<cureAllAtOnceIfCuredByItem>true</cureAllAtOnceIfCuredByItem>
	<comps>
	  <li Class="HediffCompProperties_TendDuration">
		<labelTendedWell>bandaged</labelTendedWell>
		<labelTendedWellInner>sutured</labelTendedWellInner>
		<labelSolidTendedWell>set</labelSolidTendedWell>
		<showTendQuality>false</showTendQuality>
	  </li>
	  <li Class="HediffCompProperties_Infecter">
		<infectionChance>0.02</infectionChance>
	  </li>
	  <li Class="HediffCompProperties_GetsPermanent">
		<permanentLabel>regrow scar</permanentLabel>
	  </li>
	</comps>
	<injuryProps>
	  <painPerSeverity>0.00025</painPerSeverity>
	  <averagePainPerSeverityPermanent>0</averagePainPerSeverityPermanent>
	  <bleedRate>0</bleedRate>
	  <canMerge>false</canMerge>
	  <destroyedLabel>failed regrow</destroyedLabel>
	  <destroyedOutLabel>Failed regrow</destroyedOutLabel>
	</injuryProps>
  </HediffDef>

