<Defs>

  <WorkGiverDef>
	<defName>WVC_DoBillsCraftSerums</defName>
	<label>Make serums at serum lab</label>
	<giverClass>WorkGiver_DoBill</giverClass>
	<workType>Crafting</workType>
	<workTags>
	  <li>Intellectual</li>
	</workTags>
	<priorityInType>170</priorityInType>
	<fixedBillGiverDefs>
	  <li>WVC_SerumCraftingTable</li>
	</fixedBillGiverDefs>
	<verb>craft serums</verb>
	<gerund>craft serums at</gerund>
	<requiredCapacities>
	  <li>Manipulation</li>
	</requiredCapacities>
