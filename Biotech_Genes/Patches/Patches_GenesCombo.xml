<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="WVC.PatchOperationOptional">
		<settingName>disableMechanoidizationMechanic</settingName>
		<caseTrue Class="PatchOperationSequence">
			<operations>
			</operations>
		</caseTrue>
		<caseFalse Class="PatchOperationSequence">
			<operations>

				<li Class="PatchOperationAdd">
				  <xpath>/Defs/StatDef[defName="ComfyTemperatureMin"]/parts</xpath>
				  <success>Always</success>
				  <value>
					  <li Class="WVC.StatPart_GenesCombo">
						<useMechaskinInsteadSubcore>true</useMechaskinInsteadSubcore>
						<useStaticValue>true</useStaticValue>
						<staticValue>-100</staticValue>
					  </li>
				  </value>
				</li>
				<li Class="PatchOperationAdd">
				  <xpath>/Defs/StatDef[defName="ComfyTemperatureMax"]/parts</xpath>
				  <success>Always</success>
				  <value>
					  <li Class="WVC.StatPart_GenesCombo">
						<useMechaskinInsteadSubcore>true</useMechaskinInsteadSubcore>
						<useStaticValue>true</useStaticValue>
						<staticValue>250</staticValue>
					  </li>
				  </value>
				</li>

			</operations>
		</caseFalse>
	</Operation>

</Patch>