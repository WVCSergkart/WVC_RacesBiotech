  <StatDef ParentName="WVC_Biotech_ForcedStat_Base">
	<defName>WVC_OverseerMaxGolems</defName>
	<label>max golems</label>
	<description>Determines the maximum number of golems of the same kind that the mechanitor can control at the same time.</description>
	<defaultBaseValue>0</defaultBaseValue>
	<hideAtValue>0</hideAtValue>
	<alwaysHide>false</alwaysHide>
	<category>Mechanitor</category>
	<displayPriorityInCategory>2001</displayPriorityInCategory>
	<parts>
	  <li Class="WVC_XenotypesAndGenes.StatPart_OffsetFromBuildingsOnMap" MayRequire="Ludeon.RimWorld.Royalty">
		<!-- Localization defName. Default "WVC_StatPart_GenesCombo_OffsetFromBuildings" -->
		<label>WVC_StatPart_GenesCombo_OffsetFromShrines</label>
		<!-- Looks for matches in defNames, so the full name is not necessary. Default "NatureShrine" -->
		<buildingDefName>NatureShrine</buildingDefName>
		<!-- After counting all the buildings, multiplies their number by this coefficient. Default 0.2 -->
		<buildingWeightFactor>0.2</buildingWeightFactor>
	  </li>
	</parts>
  </StatDef>

