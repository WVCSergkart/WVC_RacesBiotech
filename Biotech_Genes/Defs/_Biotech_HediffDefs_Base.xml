	  <!-- <li> -->
		<!-- <becomeVisible>true</becomeVisible> -->
		<!-- <minSeverity>0.0</minSeverity> -->
		<!-- <statOffsets> -->
			<!-- <BandwidthCost>-999</BandwidthCost> -->
		<!-- </statOffsets> -->
	  <!-- </li> -->
	<!-- </stages> -->
	<comps>
		<li Class="WVC.HediffCompProperties_GolemPopulationRegulation">
			<geneDef>WVC_SwarmConnection_Golems</geneDef>
			<statDef>WVC_OverseerMaxGolems</statDef>
		</li>
	</comps>
  </HediffDef>

</Defs>