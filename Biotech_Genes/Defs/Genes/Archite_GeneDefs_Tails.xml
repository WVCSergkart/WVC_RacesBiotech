<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Tail -->

  <!-- Node tail -->

  <GeneDef ParentName="GeneTailBase" Name="WVC_NodeTail_Base" Abstract="True">
	<label>connector tail</label>
	<description>Carriers of this gene grow a sleek long tail with several connectors at the end.</description>
	<iconPath>WVC/MecaGene_ScytheTail/NodeTail_east</iconPath>
	<iconColor>(0.85, 0.85, 0.85)</iconColor>
	<!-- <displayCategory>WVC_MechaBodyParts</displayCategory> -->
	<displayOrderInCategory>1001</displayOrderInCategory>
	<!-- <prerequisite>WVC_MechaAI_Base</prerequisite> -->
	<biostatCpx>0</biostatCpx>
	<biostatArc>1</biostatArc>
	<biostatMet>0</biostatMet>
	<minAgeActive>0</minAgeActive>
	<selectionWeight>0.0125</selectionWeight>
	<graphicData>
	  <graphicPath>WVC/MecaGene_ScytheTail/NodeTail</graphicPath>
	  <colorType>Skin</colorType>
	  <drawOffsetNorth>(0, 0.2, -0.15)</drawOffsetNorth>
	  <drawOffsetSouth>(0, -0.1, -0.15)</drawOffsetSouth>
	  <drawOffsetEast>(-0.5, -0.1, -0.15)</drawOffsetEast>
	</graphicData>
	<modExtensions>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Background">
			<backgroundPathArchite>WVC/UI/Genes/GeneBackground_ArchiteGene</backgroundPathArchite>
		</li>
	</modExtensions>
  </GeneDef>

  <!-- ======================== -->

  <GeneDef ParentName="WVC_NodeTail_Base">
	<defName>WVC_Mecha_ScytheTail</defName>
	<label>scythe tail</label>
	<description>Carriers of this gene grow a sleek long tail with several blades at the end.</description>
	<iconPath>WVC/MecaGene_ScytheTail/ScytheTail_east</iconPath>
	<biostatCpx>1</biostatCpx>
	<biostatArc>1</biostatArc>
	<!-- <biostatMet>-1</biostatMet> -->
	<minAgeActive>13</minAgeActive>
	<customEffectDescriptions>
		<li>Adds a deadly tail attack.</li>
	</customEffectDescriptions>
	<graphicData>
	  <graphicPath>WVC/MecaGene_ScytheTail/ScytheTail</graphicPath>
	  <colorType>Hair</colorType>
	</graphicData>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>scythe</symbol></li>
		<li><symbol>scy</symbol></li>
		<li><symbol>scyt</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>the</symbol></li>
		<li><symbol>he</symbol></li>
	  </suffixSymbols>
	</symbolPack>
	<modExtensions>
		<li Class="VanillaGenesExpanded.GeneExtension">
			<hediffsToBodyParts>
				<li>
					<hediff>WVC_RB_Mecha_ScytheTail</hediff>
					<bodyparts>
						<li>Torso</li>
					</bodyparts>
				</li>
			</hediffsToBodyParts>
			<offsets>
			 <east>
			  <bodyTypes>
			   <Thin>(0.2, 0.0, 0.0)</Thin>
			  </bodyTypes>
			 </east>
			</offsets>
		</li>
	</modExtensions>
  </GeneDef>

  <GeneDef ParentName="WVC_NodeTail_Base">
	<defName>WVC_Mecha_ConnectorTail</defName>
	<label>connector tail</label>
	<description>Carriers of this gene grow a sleek long tail with several connectors at the end.</description>
	<iconPath>WVC/MecaGene_ScytheTail/NodeTail_east</iconPath>
	<minAgeActive>13</minAgeActive>
	<statOffsets>
		<MechRepairSpeed>0.1</MechRepairSpeed>
	</statOffsets>
	<graphicData>
	  <graphicPath>WVC/MecaGene_ScytheTail/NodeTail</graphicPath>
	</graphicData>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>conn</symbol></li>
		<li><symbol>conne</symbol></li>
		<li><symbol>con</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>ect</symbol></li>
		<li><symbol>ector</symbol></li>
	  </suffixSymbols>
	</symbolPack>
	<modExtensions>
		<li Class="VanillaGenesExpanded.GeneExtension">
			<offsets>
			 <east>
			  <bodyTypes>
			   <Thin>(0.22, 0.0, 0.0)</Thin>
			  </bodyTypes>
			 </east>
			</offsets>
		</li>
	</modExtensions>
  </GeneDef>

  <GeneDef ParentName="WVC_NodeTail_Base">
	<defName>WVC_Mecha_AntennaTail</defName>
	<label>antenna tail</label>
	<description>Carriers of this gene grow a short antenna-like tail.</description>
	<iconPath>WVC/MecaGene_ScytheTail/AntennaTail_east</iconPath>
	<minAgeActive>13</minAgeActive>
	<statOffsets>
		<MechBandwidth>3</MechBandwidth>
	</statOffsets>
	<graphicData>
	  <graphicPath>WVC/MecaGene_ScytheTail/AntennaTail</graphicPath>
	</graphicData>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>antenna</symbol></li>
		<li><symbol>anten</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>ten</symbol></li>
	  </suffixSymbols>
	</symbolPack>
	<modExtensions>
		<li Class="VanillaGenesExpanded.GeneExtension">
			<offsets>
			 <east>
			  <bodyTypes>
			   <Thin>(0.22, 0.0, 0.0)</Thin>
			   <Male>(-0.02, 0.0, 0.0)</Male>
			  </bodyTypes>
			 </east>
			</offsets>
		</li>
	</modExtensions>
  </GeneDef>

  <GeneDef ParentName="WVC_NodeTail_Base">
	<defName>WVC_Mecha_NoTail</defName>
	<label>protective plate</label>
	<description>Carriers of this gene have additional protection.</description>
	<iconPath>WVC/UI/Genes/NoTail</iconPath>
	<iconColor>(255, 255, 255)</iconColor>
	<customEffectDescriptions>
		<li>Disable tail.</li>
	</customEffectDescriptions>
	<graphicData Inherit="False"/>
	<statOffsets>
	  <ArmorRating_Blunt>0.12</ArmorRating_Blunt>
	</statOffsets>
  </GeneDef>

</Defs>
