	  <drawIfFaceCovered>true</drawIfFaceCovered>
	</graphicData>
	<exclusionTags>
	  <li>WVC_NodeBody_Eyes</li>
	</exclusionTags>
	<capMods>
	  <li>
		<capacity>Sight</capacity>
		<offset>0.1</offset>
	  </li>
	</capMods>
