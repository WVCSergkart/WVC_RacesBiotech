<Defs>

  <!-- Bodies -->

  <GeneDef ParentName="WVC_MechanoidizationBase" Name="WVC_NodeBody_Eyes" Abstract="True" WVC_Tag="MechaAndNodeSkins_EasyPatch">
	<labelShortAdj>nodeyes</labelShortAdj>
	<description>Carriers of this gene have archites that have formed a plate that closes the eyes, for some reason this plate does not interfere with vision at all. The surface of this plate has a pattern resembling eyes.

&lt;color=#ff8585&gt;Note:&lt;/color&gt; Graphics can be disabled in the settings.</description>
<!-- &lt;color=#ff8585&gt;Note:&lt;/color&gt; The gene is activated only under certain conditions.  -->
<!-- 1. The head of the pawn must be without eyes. -->
<!-- 2. There is a gene that disables the display of eyes. -->
	<geneClass>WVC.Gene_Faceless</geneClass>
	<minAgeActive>0</minAgeActive>
	<randomChosen>true</randomChosen>
	<!-- <displayCategory>Cosmetic</displayCategory> -->
	<displayOrderInCategory>-5</displayOrderInCategory>
	<iconColor>(255, 255, 255)</iconColor>
	<biostatCpx>0</biostatCpx>
	<customEffectDescriptions>
		<li>&lt;color=#ff8585&gt;This gene is activated only in the presence of the "Nodeskin" gene.&lt;/color&gt;</li>
		<!-- <li>&lt;color=#ff8585&gt;Requires "Nodeskin" gene&lt;/color&gt;</li> -->
	</customEffectDescriptions>
	<graphicData>
	  <colorType>Custom</colorType>
	  <color>(255, 255, 255)</color>
	  <layer>PostTattoo</layer>
	  <!-- <drawOnEyes>true</drawOnEyes> -->
	  <useSkinShader>false</useSkinShader>
	  <visibleNorth>false</visibleNorth>
	  <drawIfFaceCovered>true</drawIfFaceCovered>
	</graphicData>
	<exclusionTags>
	  <li>WVC_NodeBody_Eyes</li>
	</exclusionTags>
	<!-- <capMods> -->
	  <!-- <li> -->
		<!-- <capacity>Sight</capacity> -->
		<!-- <offset>0.1</offset> -->
	  <!-- </li> -->
	<!-- </capMods> -->
  </GeneDef>

