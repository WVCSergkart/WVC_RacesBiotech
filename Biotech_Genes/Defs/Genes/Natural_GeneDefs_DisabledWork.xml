<Defs>

  <GeneDef Name="WVC_XenotypesAndGenes_GeneDisabledWork_AllWork" Abstract="True">
	<!-- <label>mechlink</label>  -->
	<!-- <labelShortAdj>blindness</labelShortAdj> -->
	<description>Carriers of this gene are completely and irreversibly useless. They are unable to perform even the dumb work.</description>
	<!-- <geneClass>WVC_XenotypesAndGenes.Gene_PermanentHediff</geneClass> -->
	<selectionWeight>0.012</selectionWeight>
	<iconPath>WVC/UI/Genes/Gene_Blankind_v0</iconPath>
	<!-- <displayCategory>Ability</displayCategory> -->
	<!-- <displayCategory>Archite</displayCategory> -->
	<displayCategory>Violence</displayCategory>
	<displayOrderInCategory>2220</displayOrderInCategory>
	<biostatCpx>1</biostatCpx>
	<biostatArc>0</biostatArc>
	<biostatMet>6</biostatMet>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>use</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>less</symbol></li>
	  </suffixSymbols>
	</symbolPack>
	<disabledWorkTags>
	  <li>AllWork</li>
	</disabledWorkTags>
	<exclusionTags>
	  <li>WVC_DisabledWork_AllWork</li>
	</exclusionTags>
	<modExtensions>
		<li Class="VanillaGenesExpanded.GeneExtension">
			<backgroundPathEndogenes>WVC/UI/Genes/GeneBackground_Endogene</backgroundPathEndogenes>
			<backgroundPathXenogenes>WVC/UI/Genes/GeneBackground_Xenogene</backgroundPathXenogenes>
		</li>
		<li Class="WVC_XenotypesAndGenes.GeneExtension_Background">
			<backgroundPathArchite>WVC/UI/Genes/GeneBackground_ArchiteGene</backgroundPathArchite>
		</li>
	</modExtensions>
