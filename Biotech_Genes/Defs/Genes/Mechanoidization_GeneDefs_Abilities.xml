<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <AbilityCategoryDef>
	<defName>WVC_Mechalike</defName>
	<displayOrder>1100</displayOrder>
  </AbilityCategoryDef>

  <!-- ================ -->

  <GeneDef ParentName="WVC_MechanoidizationBase" Name="WVC_MechanoidizationAbilities" Abstract="True">
	<displayCategory>Ability</displayCategory>
	<marketValueFactor>1.2</marketValueFactor>
	<prerequisite>WVC_MechaSkin</prerequisite>
	<minAgeActive>13</minAgeActive>
	<selectionWeight>0.6</selectionWeight>
	<displayOrderInCategory>-100</displayOrderInCategory>
	<biostatCpx>1</biostatCpx>
	<biostatArc>1</biostatArc>
	<biostatMet>-1</biostatMet>
	<!-- <statOffsets> -->
	  <!-- <WVC_PawnMechanoidization>2</WVC_PawnMechanoidization> -->
	<!-- </statOffsets> -->
	<modExtensions Inherit="False">
		<li Class="WVC.GeneExtension">
			<backgroundPathArchite>WVC/UI/Genes/GeneBackground_ArchiteGene</backgroundPathArchite>
		</li>
	</modExtensions>
  </GeneDef>

  <GeneDef ParentName="WVC_MechanoidizationAbilities">
	<defName>WVC_LongjumpMech</defName>
	<label>mech longjump</label>
	<description>Carriers of this gene have ultrafast mechanoid muscles which allow them to jump short distances.</description>
	<iconPath>UI/Abilities/MechLongJump</iconPath>
	<statOffsets>
	  <MoveSpeed>0.5</MoveSpeed>
	</statOffsets>
	<abilities>
	  <li>LongjumpMech</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>LongjumpMech</AbilityDef>
	</descriptionHyperlinks>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>jump</symbol></li>
		<li><symbol>jum</symbol></li>
		<li><symbol>ju</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>er</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <GeneDef ParentName="WVC_MechanoidizationAbilities">
	<defName>WVC_SmokepopMech</defName>
	<label>mech smokepop</label>
	<description>Carriers of this gene exhale smoke when they breathe and, under certain conditions, can exhale a fairly large cloud of smoke.</description>
	<iconPath>UI/Abilities/MechSmokepop</iconPath>
	<capMods>
	  <li>
		<capacity>Breathing</capacity>
		<offset>0.2</offset>
	  </li>
	</capMods>
	<forcedTraits>
	  <li>
		<def>CreepyBreathing</def>
	  </li>
	</forcedTraits>
	<abilities>
	  <li>SmokepopMech</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>SmokepopMech</AbilityDef>
	</descriptionHyperlinks>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>smoke</symbol></li>
		<li><symbol>smok</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>pop</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <GeneDef ParentName="WVC_MechanoidizationAbilities">
	<defName>WVC_FirefoampopMech</defName>
	<label>firefoam pop</label>
	<description>Carriers of this gene have small accumulations of foam under the mecha-skin, they can release some of these accumulations, which will allow them to put out the fire.</description>
	<iconPath>UI/Abilities/MechFirefoamPop</iconPath>
	<suppressedTraits>
	  <li>
		<def>Pyromaniac</def>
	  </li>
	</suppressedTraits>
	<statFactors>
	  <Flammability>0.1</Flammability>
	</statFactors>
	<abilities>
	  <li>FirefoampopMech</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>FirefoampopMech</AbilityDef>
	</descriptionHyperlinks>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>fire</symbol></li>
		<li><symbol>foam</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>pop</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <GeneDef ParentName="WVC_MechanoidizationAbilities">
	<defName>WVC_ResurrectionMech</defName>
	<label>resurrect mech</label>
	<description>Carriers of this gene can affect the self-repair function of severely damaged mechanoids.</description>
	<iconPath>UI/Abilities/MechResurrection</iconPath>
	<statOffsets>
	  <MechRepairSpeed>0.2</MechRepairSpeed>
	</statOffsets>
	<abilities>
	  <li>ResurrectionMech</li>
	</abilities>
	<descriptionHyperlinks>
	  <AbilityDef>ResurrectionMech</AbilityDef>
	</descriptionHyperlinks>
	<symbolPack>
	  <prefixSymbols>
		<li><symbol>ressur</symbol></li>
		<li><symbol>ressu</symbol></li>
		<li><symbol>ress</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>ect</symbol></li>
		<li><symbol>ct</symbol></li>
	  </suffixSymbols>
	</symbolPack>
  </GeneDef>

  <!-- ============================================================================== -->

  <GeneDef ParentName="WVC_MechanoidizationAbilities">
	<defName>WVC_EndogermReimplanter</defName>
	<label>mecha-gene implanter</label>
	<labelShortAdj>reimplanter</labelShortAdj>
	<description>Carriers of this gene can implant a copy of their endo/xenogerm into another person through a somewhat gross-looking injector organ. Their own genetic material will then regrow very slowly. If they implant while their genes are regrowing, they will die.</description>
	<!-- <iconPath>UI/Icons/Genes/Gene_XenogermReimplanter</iconPath> -->
	<iconPath>WVC/UI/Genes/Reimplanter</iconPath>
	<!-- <displayCategory>Archite</displayCategory> -->
	<prerequisite>WVC_MechaAI_Base</prerequisite>
	<sterilize>true</sterilize>
	<customEffectDescriptions>
		<li>Completely changes the genes of the target pawn to the genes of the caster.</li>
		<li>&lt;color=#ff8585&gt;Can't be absorbed forcly.&lt;/color&gt;</li>
	</customEffectDescriptions>
	<abilities>
	  <li>WVC_EndogermReimplanter</li>
	</abilities>
	<statFactors>
	  <Fertility>0</Fertility>
	</statFactors>
	<!-- <exclusionTags> -->
		<!-- <li>Fertility</li> -->
		<!-- <li>Egglaying</li> -->
		<!-- <li>AG_Egglaying</li> -->
		<!-- <li>AG_Gestation</li> -->
		<!-- <li>AG_Fertility</li> -->
	<!-- </exclusionTags> -->
	<descriptionHyperlinks>
	  <AbilityDef>WVC_EndogermReimplanter</AbilityDef>
	</descriptionHyperlinks>
	<biostatCpx>3</biostatCpx>
	<!-- <biostatArc>2</biostatArc> -->
	<biostatMet>0</biostatMet>
	<modExtensions Inherit="False">
		<li Class="WVC.GeneExtension">
			<backgroundPathArchite>WVC/UI/Genes/GeneBackground_NodeGene</backgroundPathArchite>
		</li>
	</modExtensions>
  </GeneDef>

  <AbilityDef ParentName="AbilityTouchBase">
	<defName>WVC_EndogermReimplanter</defName>
	<label>implant genes</label>
	<description>Implant this person's endo/xenogenes into a willing subject using a special injector organ. If this person's genes are currently regrowing, they will implant their endo/xenogerm and die in the process.\n\nWhen implanted, a endo/xenogerm will overwrite the target's endo/xenogenes.</description>
	<!-- <iconPath>UI/Icons/Genes/Gene_XenogermReimplanter</iconPath> -->
	<iconPath>WVC/UI/Genes/Reimplanter</iconPath>
	<warmupStartSound>ReimplantXenogerm_Cast</warmupStartSound>
	<warmupEffecter>Implant_Xenogerm</warmupEffecter>
	<category>WVC_Mechalike</category>
	<displayOrder>500</displayOrder>
	<hostile>false</hostile>
	<displayGizmoWhileUndrafted>True</displayGizmoWhileUndrafted>
	<disableGizmoWhileUndrafted>False</disableGizmoWhileUndrafted>
	<showWhenDrafted>false</showWhenDrafted>
	<verbProperties>
	  <verbClass>Verb_CastAbilityTouch</verbClass>
	  <drawAimPie>false</drawAimPie>
	  <range>-1</range>
	  <warmupTime>4</warmupTime>
	  <targetParams>
		<canTargetAnimals>false</canTargetAnimals>
		<canTargetSelf>false</canTargetSelf>
		<canTargetBuildings>false</canTargetBuildings>
		<canTargetMechs>false</canTargetMechs>
	  </targetParams>
	</verbProperties>
	<comps>
	  <li Class="WVC.CompProperties_AbilityReimplantEndogerm" />
	  <!-- <li Class="CompProperties_AbilityReimplantXenogerm" /> -->
	</comps>
  </AbilityDef>

</Defs>