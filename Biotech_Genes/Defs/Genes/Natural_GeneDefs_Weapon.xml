  <HediffDef ParentName="WVC_RB_Hediff_BodyParts_Special">
	<defName>WVC_RB_MechaClaws</defName>
	<label>mecha-claw</label>
	<description>Deadly sharp claws.</description>
	<!-- <hediffClass>Hediff_AddedPart</hediffClass> -->
	<addedPartProps>
	  <!-- <solid>true</solid> -->
	  <partEfficiency>1.0</partEfficiency>
	  <betterThanNatural>true</betterThanNatural>
	</addedPartProps>
	<comps>
	  <li Class="HediffCompProperties_VerbGiver">
		<tools>
		  <li>
			<label>claw</label>
			<capacities>
			  <li>Cut</li>
			  <li>Stab</li>
			</capacities>
			<power>20</power>
			<cooldownTime>1.6</cooldownTime>
			<armorPenetration>0.8</armorPenetration>
			<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			<soundMeleeHit>Pawn_Melee_MechanoidSlash_HitPawn</soundMeleeHit>
			<soundMeleeMiss>Pawn_Melee_MechanoidSlash_Miss</soundMeleeMiss>
			<surpriseAttack>
			  <extraMeleeDamages>
				<li>
				  <def>Stun</def>
				  <amount>14</amount>
				</li>
			  </extraMeleeDamages>
			</surpriseAttack>
		  </li>
		</tools>
	  </li>
	</comps>
  </HediffDef>

  <HediffDef ParentName="WVC_RB_Hediff_BodyParts_Special">
	<defName>WVC_RB_NaturalClaws</defName>
	<label>claw</label>
	<description>Deadly sharp claws. Not very suitable for fine work.</description>
	<!-- <hediffClass>Hediff_AddedPart</hediffClass> -->
	<addedPartProps>
	  <!-- <solid>true</solid> -->
	  <partEfficiency>0.80</partEfficiency>
	  <betterThanNatural>true</betterThanNatural>
	</addedPartProps>
	<comps>
	  <li Class="HediffCompProperties_VerbGiver">
		<tools>
		  <li>
			<label>claw</label>
			<capacities>
			  <li>Cut</li>
			  <li>Stab</li>
			</capacities>
			<power>18</power>
			<cooldownTime>1.6</cooldownTime>
			<armorPenetration>0.4</armorPenetration>
			<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
			<surpriseAttack>
			  <extraMeleeDamages>
				<li>
				  <def>Stun</def>
				  <amount>14</amount>
				</li>
			  </extraMeleeDamages>
			</surpriseAttack>
		  </li>
		</tools>
	  </li>
	</comps>
  </HediffDef>

