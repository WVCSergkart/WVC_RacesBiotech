	  <MeatAmount>0.8</MeatAmount>
	  <LeatherAmount>0.8</LeatherAmount>
	  <Mass>0.8</Mass>
	</statFactors>
	<statOffsets>
	  <MoveSpeed>0.2</MoveSpeed>
	</statOffsets>
