<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============== Mech serums ====================-->

  <WVC.RacesBiotech.SerumTemplateDef Name="WVC_XenotypeSerumTemplate_Base" Abstract="True">
	<!-- <thingClass>ThingWithComps</thingClass> -->
	<category>Item</category>
	<drawerType>MapMeshOnly</drawerType>
	<!-- <resourceReadoutPriority>Middle</resourceReadoutPriority> -->
	<!-- <useHitPoints>true</useHitPoints> -->
	<selectable>true</selectable>
	<altitudeLayer>Item</altitudeLayer>
	<!-- <stackLimit>75</stackLimit> -->
	<alwaysHaulable>true</alwaysHaulable>
	<drawGUIOverlay>true</drawGUIOverlay>
	<rotatable>false</rotatable>
	<pathCost>14</pathCost>
	<allowedArchonexusCount>-1</allowedArchonexusCount>
	<!-- = -->
	<label>xenotype serum</label>
	<description>A one-use super-dose of mechanites tuned to change the user's xenotype. After using the serum, the user will fall into a two-day coma, except for the &lt;color=#f5ffa2&gt;Blankind&lt;/color&gt; xenotype.

If the user's genes are regrowing, then instead of applying the xenotype, the gene regeneration timer will be reset.

&lt;color=#f5ffa2&gt;Note:&lt;/color&gt; If the xenotype is inheritable and has no skin/hair color, then a white skin/hair gene will be added.</description>
	<descriptionHyperlinks>
	  <XenotypeDef>WVC_Blank</XenotypeDef>
	</descriptionHyperlinks>
	<thingClass>ThingWithComps</thingClass>
	<resourceReadoutPriority>Middle</resourceReadoutPriority>
	<useHitPoints>true</useHitPoints>
	<graphicData>
	  <texPath>WVC/Things/XenotypeSerum</texPath>
	  <graphicClass>Graphic_Random</graphicClass>
	</graphicData>
	<statBases>
	  <Beauty>-2</Beauty>
	  <MarketValue>2100</MarketValue>
	  <MaxHitPoints>80</MaxHitPoints>
	  <Mass>0.2</Mass>
	  <DeteriorationRate>2.0</DeteriorationRate>
	  <Flammability>0.2</Flammability>
	  <WorkToMake>25000</WorkToMake>
	</statBases>
	<stackLimit>10</stackLimit>
	<techLevel>Ultra</techLevel>
	<tradeTags>
	  <li>ExoticMisc</li>
	</tradeTags>
	<tradeability>All</tradeability>
	<thingSetMakerTags>
	  <li>RewardStandardLowFreq</li>
	</thingSetMakerTags>
	<comps>
	  <li Class="CompProperties_Forbiddable"/>
	  <li Class="CompProperties_Usable">
		<useJob>UseItem</useJob>
		<useLabel>Use {0_label}</useLabel>
		<useDuration>600</useDuration>
	  </li>
	  <!-- <li Class="CompProperties_UseEffect"> -->
		<!-- <compClass>CompUseEffect_FixWorstHealthCondition</compClass> -->
	  <!-- </li> -->
	  <li Class="CompProperties_UseEffectPlaySound">
		<soundOnUsed>MechSerumUsed</soundOnUsed>
	  </li>
	  <li Class="CompProperties_UseEffectDestroySelf" />
	</comps>
  </WVC.RacesBiotech.SerumTemplateDef>

