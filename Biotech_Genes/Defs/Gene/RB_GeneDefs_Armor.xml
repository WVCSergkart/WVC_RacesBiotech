		<li><symbol>vuln</symbol></li>
		<li><symbol>vul</symbol></li>
		<li><symbol>armor</symbol></li>
		<li><symbol>less</symbol></li>
		<li><symbol>dama</symbol></li>
		<li><symbol>damag</symbol></li>
		<li><symbol>gray</symbol></li>
		<li><symbol>goo</symbol></li>
		<li><symbol>arc</symbol></li>
		<li><symbol>arch</symbol></li>
	  </prefixSymbols>
	  <suffixSymbols>
		<li><symbol>less</symbol></li>
